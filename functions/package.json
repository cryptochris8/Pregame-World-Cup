{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "fetch-player-photos": "ts-node src/fetch-player-photos.ts",
    "fetch-manager-photos": "ts-node src/fetch-manager-photos.ts",
    "fetch-all-photos": "npm run fetch-player-photos && npm run fetch-manager-photos",
    "fetch-player-photos-v2": "ts-node src/fetch-player-photos-v2.ts",
    "fetch-manager-photos-v2": "ts-node src/fetch-manager-photos-v2.ts",
    "fetch-all-photos-v2": "npm run fetch-player-photos-v2 && npm run fetch-manager-photos-v2",
    "check-photos": "ts-node src/check-photos.ts",
    "check-photos-v2": "ts-node src/check-photos-v2.ts",
    "seed-team-players": "ts-node src/seed-team-players.ts",
    "seed-managers": "ts-node src/seed-managers.ts",
    "seed-head-to-head": "ts-node src/seed-head-to-head.ts",
    "seed-world-cup-history": "ts-node src/seed-world-cup-history.ts",
    "seed-player-wc-stats": "ts-node src/seed-player-world-cup-stats.ts",
    "seed-all": "npm run seed-team-players && npm run seed-managers && npm run seed-head-to-head && npm run seed-world-cup-history && npm run seed-player-wc-stats"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.10.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "node-sportsdata": "^0.4.9",
    "stripe": "^18.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0",
    "ts-node": "^10.9.2"
  },
  "private": true
}
